%h1 Listing posts
- @posts.each_with_index do |post, index|
  .row.post
    .span1
      %h4=index+1
    .span1
      - if current_target
        - unless post.already_voted?(current_target) || post.created_by?(current_target)
          = link_to "UP", post_votes_path(post, :positive => true), :method => :post
      - else
        = link_to "UP", post_votes_path(post, :positive => true), :method => :post
    .span8
      %h4
        = link_to post.title, post
        - if !post.url.blank?
          %span.post-url
            (#{post.url})
      %p
        #{post.points} points by #{link_to post.poster, post.poster}, #{time_ago_in_words(post.created_at)} ago
    .span2
      - if post.posted_by?(current_target)
        - if post.editable?
          = link_to 'Edit', edit_post_path(post)
        = link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete
= link_to 'Submit', new_post_path