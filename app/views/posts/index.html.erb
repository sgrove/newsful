<h1>Listing posts</h1>

<table>
  <tr>
    <th>Points</th>
    <th>Title</th>
    <th>Url</th>
    <th>Poster</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.points %></td>
    <td><%= post.title %></td>
    <td><%= post.url %></td>
    <td><%= post.poster %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

